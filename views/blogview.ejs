<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="styles/blogview.css">
</head>
<body>

<%- include("partials/header.ejs") %>
<section >
  <div class="blogview">
    <div>
      <h1><%= firstLine %></h1>
      <h4> posted by <%= secondLine %></h4>
      <h4><%= thirdLine %></h4>
    </div>
  
    <div class="blogContent">
      <pre>
        <% restBlog.forEach(function(line) { %>
            <%= line %>
        <% }); %>
      </pre>
    </div>
  
  </div>
  <div class="actionButtons">
    <form action="/" method="post">
      <input type="hidden" name="blogPath" value="<%= blogPath %>">
      <input class="button" type="submit" name="deletePost" id="deletePost" class="btn" value="Delete Post">
    </form>
  
    <form action="/update" method="post">
      <input type="hidden" name="blogPath" value="<%= blogPath %>">
      <input class="button" type="submit" name="updatePost" id="updatePost" class="btn" value="Update Post">
    </form>
  
  </div>
</section>

<%- include("partials/footer.ejs") %>


</body>
</html>